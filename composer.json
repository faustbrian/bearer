{
    "name": "cline/bearer",
    "description": "Stripe-style typed API tokens with groups, environments, and audit logging for Laravel",
    "license": "MIT",
    "keywords": [
        "php",
        "laravel",
        "api-tokens",
        "authentication",
        "sanctum"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@cline.sh"
        }
    ],
    "require": {
        "php": "^8.5.0",
        "cline/ancestry": "^1.5.1",
        "cline/morphism": "^1.3.0",
        "cline/variable-keys": "^1.1",
        "illuminate/auth": "^10.0||^11.0||^12.0",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "illuminate/database": "^10.0||^11.0||^12.0",
        "illuminate/events": "^10.0||^11.0||^12.0",
        "illuminate/http": "^10.0||^11.0||^12.0",
        "illuminate/support": "^10.0||^11.0||^12.0",
        "spatie/laravel-package-tools": "^1.92.7"
    },
    "require-dev": {
        "cline/coding-standard": "^1.6.2",
        "mockery/mockery": "^1.6.12",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "spatie/laravel-activitylog": "^4.10.2",
        "symfony/var-dumper": "^6.0|^7.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Cline\\Bearer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "aliases": {
                "Bearer": "Cline\\Bearer\\Facades\\Bearer"
            },
            "providers": [
                "Cline\\Bearer\\BearerServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": "vendor/bin/ecs check --fix",
        "refactor": "rector",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ],
        "test:lint": "vendor/bin/ecs check",
        "test:refactor": "rector --dry-run",
        "test:type-coverage": "pest --parallel --min=90 --type-coverage",
        "test:types": "phpstan --memory-limit=4G",
        "test:unit": "pest --parallel --min=90 --coverage"
    }
}
